@media (max-width: 1872px) {
    body {
        max-width: 90%;
        align-items: center;
        align-content: center;
        padding-right: 5%;
        padding-left: 5%;
    }
}
@media (min-width: 1872px) {
    body {
        max-width: 100%;
        align-items: center;
        padding: 0;
    }
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(rgba(255, 214, 64, 0.4), rgba(255, 225, 115, 0.2), white);
    margin: 0;
}
main {
    padding: 20px;
}
.section {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-bottom: 20px;
}

.section__title {
    margin-top: 0;
    margin-bottom: 12px;
    font-size: 48px;
    line-height: 100%;
    font-weight: bold;
    text-align: center;
    letter-spacing: -1.5px;
}

.section__part-title {
    margin-top: 0;
    margin-bottom: 12px;
    font-size: 36px;
    line-height: 100%;
    font-weight: bold;
    text-align: center;
    letter-spacing: -1.5px;
}

.section__text {
    margin-bottom: 6px;
    font-size: 18px;
}

.section blockquote {
    margin-bottom: 6px;
    font-size: 16px;
    font-style: italic;
}